<?xml version="1.0" encoding="utf-8"?>
<!--innerRadiusRatio(i) and thicknessRatio(t) must obey a rule for the ring to appear uncut.-->
<!--This is t = (2i) / (i - 2) or i = (2t) / (t - 2)-->
<!--Some precalculated values are (i, t):(2.1, 42), (2.2, 22), (2.25, 18), (2.3, 15,3), (2.4, 12)-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:innerRadiusRatio="2.4"
       android:shape="ring"
       android:thicknessRatio="12"
       android:useLevel="false">


    <solid android:color="#ffffffff"/>

    <stroke
        android:width="1dp"
        android:color="#66ffffff"/>


</shape>